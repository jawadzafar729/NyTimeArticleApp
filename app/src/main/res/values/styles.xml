<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextViewLargeBold" parent="android:Widget.TextView">
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">@dimen/font_title</item>
        <item name="android:fontFamily">sans-serif-black</item>
    </style>

    <style name="TextViewNormal" parent="android:Widget.TextView">
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="TextViewSmall" parent="android:Widget.TextView">
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

</resources>
